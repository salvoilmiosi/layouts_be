function regex_periodo() {
  return format(/\d\d\/\d\d\/\d\d\d\d-\s*\d\d\/$0/,date_format(mese_fattura,"%m/%Y"));
}
function regex_periodo_generic() {
  return /\d{2}\/\d{2}\/\d{4}\s*-\s*\d{2}\/\d{2}\/\d{4}/;
}
function check_periodo(@) {
  return date_between(mese_fattura,
    search_date(@,"%d/%m/%Y",/(\D)\s*-\s*\D/),
    search_date(@,"%d/%m/%Y",/\D\s*-\s*(\D)/));
}
function calc_totale_parziale(@) {
  foreach(matches(@,format(/Periodo ($0 Euro\/POD\/mese \N)/, regex_periodo_generic()))) {
    if(check_periodo()) {
      $ret+=trunc(search_num(@,/Euro\/POD\/mese (\N)/),2);
    }
  }
  $ret+=sum(matches_num(@,format(/Periodo $0 Euro\/kW\/mese \N \N (\N)/, regex_periodo())));
  foreach(matches(@,format(/Periodo ($0 Euro\/kWh \N)/, regex_periodo_generic()))) {
    if(check_periodo()) {
      $ret+=trunc(search_num(@,/Euro\/kWh (\N)/) * sum(energia_attiva),2);
    }
  }
  return $ret;
}
function calc_penale_reattiva(@, $percent_min, $percent_max, $format_str) {
  for($i=0; $i<3; $i++) {
    foreach(matches(@,format(/Energia Reattiva \($2\) - F$1 - Periodo ($0 Euro\/kVarh \N)/, regex_periodo_generic(), $i+1, $format_str))) {
      if(check_periodo()) {
        $ret+=trunc(clamp(energia_reattiva[$i] - energia_attiva[$i] * $percent_min, 0, energia_attiva[$i] * ($percent_max - $percent_min))
          * search_num(@,/Euro\/kVarh (\N)/),2);
      }
    }
  }
  return $ret;
}
with($dettaglio) {
  with(between(@,"","Totale materia energia")) {
    foreach(matches(@,/Acconti fatture precedenti per servizi di vendita su kWh \N - Periodo (.+ \N)/)) {
      if(check_periodo()) {
        spesa_materia_energia+=search_num(@,/(\N)$/);
      }
    }
    foreach(matches(@,format(/Commercializzazione e vendita \(PCV1\) - Periodo ($0 Euro\/POD\/mese \N)/, regex_periodo_generic()))) {
      if(check_periodo()) {
        pcv=trunc(search_num(@,/Euro\/POD\/mese (\N)/),2);
      }
    }
    foreach(matches(@,format(/Periodo ($0 Euro\/POD\/mese \N)/, regex_periodo_generic()))) {
      if(check_periodo()) {
        spesa_materia_energia+=trunc(search_num(@,/Euro\/POD\/mese (\N)/),2);
      }
    }
    step(captures_num(@,format(/Energia - F1 - Periodo $0 Euro\/kWh (\N) (\N) (\N)/, regex_periodo()))) {
      prezzo_energia[0]=@;
      energia_attiva[0]=@;
      spesa_materia_energia+=trunc(@,2);
    }
    step(captures_num(@,format(/Energia - F2 - Periodo $0 Euro\/kWh (\N) (\N) (\N)/, regex_periodo()))) {
      prezzo_energia[1]=@;
      energia_attiva[1]=@;
      spesa_materia_energia+=trunc(@,2);
    }
    step(captures_num(@,format(/Energia - F3 - Periodo $0 Euro\/kWh (\N) (\N) (\N)/, regex_periodo()))) {
      prezzo_energia[2]=@;
      energia_attiva[2]=@;
      spesa_materia_energia+=trunc(@,2);
    }
    foreach(matches(@,format(/Perdite di rete - F[1-3] - Periodo $0 Euro\/kWh \N (\N \N)/, regex_periodo()))) {
      step(captures_num(@,/(\N) (\N)/)) {
        perdite_di_rete+=@;
        spesa_materia_energia+=@;
      }
    }
    foreach(matches(@,format(/Dispacciamento - Periodo ($0 Euro\/kWh \N)/, regex_periodo_generic()))) {
      if(check_periodo()) {
        disp_var=search_num(@,/Euro\/kWh (\N)/);
        spesa_materia_energia+=trunc(disp_var * (sum(energia_attiva) + perdite_di_rete),2);
      }
    }
  }
  with(between(@,"Totale materia energia","Totale Trasporto e gestione del contatore")) {
    foreach(matches(@,/Acconti fatture precedenti per oneri di trasporto e gestione del contatore su kWh \N - Periodo (.+ \N)/)) {
      if(check_periodo()) {
        trasporto_gestione+=search_num(@,/(\N)$/);
      }
    }
    trasporto_gestione+=calc_totale_parziale();
    potenza[0:3]=search_num(@,format(/Quota Potenza - trasporto - Periodo $0 Euro\/kW\/mese \N (\N)/, regex_periodo()));

    penale_reattiva_inf75=calc_penale_reattiva(0.33, 0.75, "Tra il 33 % ed il 75 %");
    penale_reattiva_sup75=calc_penale_reattiva(0.75, 1, "Oltre il 75 %");

    trasporto_gestione+=penale_reattiva_inf75 + penale_reattiva_sup75;
  }
  with(between(@,"Totale Trasporto e gestione del contatore","Totale oneri di sistema")) {
    foreach(matches(@,/Acconti fatture precedenti per oneri di sistema su kWh \N - Periodo (.+ \N)/)) {
      if(check_periodo()) {
        oneri+=search_num(@,/(\N)$/);
      }
    }
    oneri+=calc_totale_parziale();
  }
  with(between(@,"Totale oneri di sistema","Totale imposte")) {
    foreach(matches(@,/Acconti fatture precedenti per Imposte su kWh \N - Periodo (.+ \N)/)) {
      if(check_periodo()) {
        accise+=search_num(@,/(\N)$/);
      }
    }
    if(contains(@,"Accisa sull'energia elettrica")) {
      accise+=trunc(sum(energia_attiva) * 0.0125,2);
    }
  }
  imponibile = spesa_materia_energia + trasporto_gestione + oneri + accise;
  iva=search(@,/IVA (\d+%)/);
}
