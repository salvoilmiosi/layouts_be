if(!$calc_conguaglio) {
  if(mese_fattura != $mese_fine) {
    $calc_mese++;
    nexttable();
    goto nome_fornitore;
  } else if($mese_inizio_conguaglio) {
    $calc_conguaglio = 1;
    $calc_mese = 0;
    nexttable();
    goto nome_fornitore;
  }
} else if(mese_fattura != $mese_fine_conguaglio) {
  $calc_mese++;
  nexttable();
  goto nome_fornitore;
}
